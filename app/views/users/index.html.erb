<% if logged_in? && !@current_user.nil?  %>
<% @user = @current_user %>
<% else %>
<% @user = User.first %>
<% end %>
<% @consultants = Consultant.all %>

<div class="row" style="margin-top:30px">
  <div class="col-md-2" id="perfil" >
    <row>
      <h3 id="title">Seu Perfil</h3>
      <div class="col-md-12" style="text-align: center;">
        <img src="http://ppgbiotecufam.net/images/default_user.jpg" id="card-photo" style="width:100px;" /><br />
        <%= @user.name %><br />
        <%= @user.city %> - <%= @user.state %><br />
        <%= @user.occupation %>
      </div>

      </row>
    </div>
    <div class="col-md-9">
      <div class="col-md-12">
        <div class="row">

          <div class="col-md-12">
            <h3 id="title">Consultores disponíveis</h3>
            <div class="row">
              <% @consultants.each do |c| %>
              <div class="col-md-6">
                <div id="card">
                  <div class="row">
                    <div class="col-md-2">
                      <img src="http://ppgbiotecufam.net/images/default_user.jpg" id="card-photo" />
                    </div>
                    <div class="col-md-10">
                      <p style="margin-top:20px;"><b><%= c.name %></b><br />
                      São Paulo - SP<br />
                      Programador<br />
                      <button class="btn btn-primary" id="card-talk"><spam class="glyphicon glyphicon-envelope">  Conversar</spam></button>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    </div>
</div>
<%#= link_to 'New Consultant', new_consultant_path %>
